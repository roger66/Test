<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">

        <android.support.design.widget.TabLayout
            android:id="@+id/attention_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:tabGravity="center"
            app:tabBackground="@android:color/transparent"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/TabLayoutTextSizeStyle"
            app:tabSelectedTextColor="#F44746"
            app:tabTextColor="#999" />

        <ImageView
            android:id="@+id/attention_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/back_normal" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/color_EEEEEE" />

    <android.support.v4.view.ViewPager
        android:id="@+id/attention_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
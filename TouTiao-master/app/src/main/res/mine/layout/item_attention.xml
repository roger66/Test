<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_attention_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_circle_default" />


    <TextView
        android:id="@+id/item_attention_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_attention_tv"
        android:gravity="center"
        android:text="关注"
        android:textColor="@drawable/selector_attention_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/item_attention_btn"
        android:layout_toRightOf="@id/item_attention_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_attention_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NMB"
            android:textColor="@color/color_222222"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/item_attention_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="CNM"
            android:textColor="#999"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/video_publish_root"
    android:background="@android:color/black"
    android:orientation="vertical">


    <VideoView
        android:id="@+id/video_publish_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />


    <LinearLayout
        android:id="@+id/video_publish_publish_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_video_publish_bg"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <EditText
                android:id="@+id/video_publish_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:hint="请输入视频标题"
                android:maxLength="30"
                android:minHeight="60dp"
                android:padding="15dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/video_publish_commit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_video_publish"
            android:gravity="center"
            android:text="发布"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/video_publish_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/video_publish_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/back_white" />


    </RelativeLayout>

</RelativeLayout>